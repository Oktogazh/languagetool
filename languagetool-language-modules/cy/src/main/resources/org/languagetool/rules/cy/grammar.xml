<rules lang="cy" xsi:noNamespaceSchemaLocation="../../../../../../../../../languagetool-core/src/main/resources/org/languagetool/rules/rules.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <category id="BANNOD" name="Bannod">
    <rule id="YR" name="y rhag gytseinau">
      <pattern>
        <marker>
          <token regexp="yes">yr</token>
          <token regexp="yes">[qrtpsdfgjklzcvbnm].+<exception postag="X EN_UR"/></token>
        </marker>
        <message>Defnyddiwch <suggestion>y</suggestion> o flaen cytsain.</message>
        <example correction="Y"><marker>Yr</marker> dyn sy'n siarad.</example>
      </pattern>
    </rule>
  </category>
</rules>
